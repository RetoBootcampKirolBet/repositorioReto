<script>
    $('#btnOcultar').on('click', function () {
        $('.ksoftName').hide("fast");
        $('.ksoftCol').hide("fast");
        $('.sprintName').hide("fast");
        $('.sprintCol').hide("fast");
    });
    $('#btnMostrar').on('click', function () {
        $('.ksoftName').show("fast");
        $('.ksoftCol').show("fast");
        $('.sprintName').show("fast");
        $('.sprintCol').show("fast");
    });
    $('#btnSearch').on('click', function () {
        window.location.href = "/WorkPackages/SearchResult";
    });
    $('#wp-details-view').on('click', function () {
        $('.optionKSP').each(function () {
            if ($(this).is(':checked')) {
                let selectedId = $(this).siblings().val();
                $('<input />').attr('type', 'hidden')
                    .attr('name', "id")
                    .attr('value', selectedId)
                    .appendTo('#viewDetailForm');
                $("#viewDetailForm").submit();
            }
        });
    });

    //$('#wp-details-close').on('click', function () {
    //    $('#information').hide("fast");
    //})

</script>
